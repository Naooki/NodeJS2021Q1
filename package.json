    "src/**/*.ts": [
      "pretty-quick --staged",
      "npm run eslint"
    ]
  },
  "dependencies": {
    "ajv": "^7.2.3",
    "express": "^4.17.1",
    "faker": "^5.4.0",
    "pg": "^8.5.1",
    "sequelize": "^6.6.2"
